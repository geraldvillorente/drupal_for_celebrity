/**
 * Implements hook_block_info().
 */
function ig_module_block_info() {
	$blocks = array();

	$blocks['footer_content'] = array(
		'info' => t('IG Accounts')
	);
	return $blocks;
}

/**
 * Implements hook_block_configure().
 */
function ig_module_block_configure($delta = "") {
	$form = array();

	switch ($delta) {
		case 'footer_content':
			array_push($form, ig_footer_social_media("instagram"));
		break;
	}

	return $form;
}

/**
 * Implements hook_block_save().
 */

function ig_module_social_media_upload_block_save($social, $type, $delta) {
	$file = file_load($type);
	$file->status = FILE_STATUS_PERMANENT;
	file_save($file);
	$block = block_load('ig_module', $delta);
	file_usage_add($file, 'ig_module', 'block', $block->bid);
	variable_set("{$social}_imagefield_fid", $file->fid);
}

/**
 * Implements hook_block_view().
 */
function ig_module_block_view($delta='') {
  $block = array();

  switch($delta) {
    case 'footer_content':
      $block['content'] = ig_module_footer_content_block_view();
      break;
  }
  return $block;
}